<body>
  <h1>Test Upload Dashboard ðŸ’Œ</h1>
  <p>Drop a file to confirm the uploader loads correctly.</p>

  <div id="files-drag-drop"></div>

  <script type="module">
    import {
      Uppy,
      Dashboard,
    } from 'https://releases.transloadit.com/uppy/v4.18.0/uppy.min.mjs'

    const uppy = new Uppy()

    uppy.use(Dashboard, {
      target: '#files-drag-drop',
      inline: true,
      note: 'This is a testâ€”no files will be uploaded',
      proudlyDisplayPoweredByUppy: false,
    })

    uppy.on('file-added', (file) => {
      console.log('File added:', file)
      alert(`File "${file.name}" added. Upload not wired yet.`)
    })
  </script>
